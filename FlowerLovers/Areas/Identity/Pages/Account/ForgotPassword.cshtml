@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="forgot-password container">
    <h1>@ViewData["Title"]</h1>
    <h2>Enter your email.</h2>
    <hr />
    <div>
        <form class="form forgot-password" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-floating forgot-password">
                <input asp-for="Input.Email" class="form-control forgot-password" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div class="forgot-password-button">
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
