@model LogInModel

@{
    ViewBag.Title = "Flower Lovers";
}

<section class="log-in-container">
    <h1 class="title">Use a local account to log in</h1>
    <div>
        <div class="col-md-4">
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating login-email">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating login-password">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label asp-for="RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        Remember Me
                    </label>
                </div>
                <div class="log-in-button">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="links">
                    <p>
                        <a id="forgot-password" asp-controller="Identity" asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-controller="Identity" asp-action="Register">Register as a new user</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
