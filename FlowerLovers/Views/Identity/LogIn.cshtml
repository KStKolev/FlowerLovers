@model LogInModel

<section class="log-in-container">
    <h1 class="title">Use a local account to log in</h1>
    <hr class="my-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Email">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="RememberMe" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember Me</label>
                    </div>
                    <div class="text-center">
                        <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="text-center mt-3">
                        <p>
                            <a id="forgot-password" asp-controller="Identity" asp-action="ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-controller="Identity" asp-action="Register">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
