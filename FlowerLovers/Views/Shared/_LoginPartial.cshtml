@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item nav-personal-data">
            <a asp-controller="Identity" asp-action="PersonalData">Personal Data</a>
        </li>
        <li class="nav-item nav-change-password">
            <a asp-controller="Identity" asp-action="ChangePassword">Change password</a>
        </li>
        <li class="nav-item nav-introducement">
            <a asp-controller="Register" asp-action="Introducement">Introducement</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-controller="Account" asp-action="UserPage" title="Manage">User</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Identity" asp-action="LogOut">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-controller="Identity" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Identity" asp-action="LogIn">Login</a>
        </li>
    }
</ul>
