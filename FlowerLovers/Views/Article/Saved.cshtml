@model ArticleModel

<section class="saved-articles-section">
    <div class="container">
        <div class="saved-articles-header">
            <h1>Saved Articles</h1>
            <hr />
        </div>
        @if (Model.TotalPages > 1)
        {
            <div class="row justify-content-center">
                <div class="col-auto">
                    @if (Model.CurrentPage > 1)
                    {
                        <a href="@Url.Action("Saved", new { page = Model.CurrentPage - 1 })" class="btn btn-primary">Previous</a>
                    }
                </div>
                <div class="col-auto">
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <a href="@Url.Action("Saved", new { page = Model.CurrentPage + 1 })" class="btn btn-primary">Next</a>
                    }
                </div>
            </div>
        }
        <span class="saved-current-page-header">
            @Model.CurrentPage
        </span>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="saved-articles-container">
                    @foreach (var article in Model.Articles)
                    {
                        <article class="article-container">
                            <h3>@article.Title</h3>
                            <hr class="article-header-line" />
                            <div class="article-border-content">
                                <img src="@Url.Content(@"~/" + article.ImageUrl)" alt="article image" class="img-fluid" />
                                <h4>Information about the flower:</h4>
                                <hr class="article-content-line" />
                                <p>@article.Content</p>
                                <div class="article-form-content">
                                    <form asp-action="Leave" asp-controller="Article" asp-route-articleId="@article.Id" method="post" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <button type="submit" class="btn btn-primary">LEAVE</button>
                                    </form>
                                    <a asp-action="Details" asp-controller="Article" asp-route-articleId="@article.Id" class="btn btn-secondary">DETAILS</a>
                                </div>
                            </div>
                        </article>
                    }
                </div>
            </div>
        </div>
        @if (Model.TotalPages > 1)
        {
            <div class="row justify-content-center">
                <div class="col-auto">
                    @if (Model.CurrentPage > 1)
                    {
                        <a href="@Url.Action("Saved", new { page = Model.CurrentPage - 1 })" class="btn btn-primary">Previous</a>
                    }
                </div>
                <div class="col-auto">
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <a href="@Url.Action("Saved", new { page = Model.CurrentPage + 1 })" class="btn btn-primary">Next</a>
                    }
                </div>
            </div>
        }
        <span class="saved-current-page-footer">
            @Model.CurrentPage
        </span>
    </div>
</section>
