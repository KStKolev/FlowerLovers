@model AccountPageModel

<section class="account-page-container">
    <div class="account-content-container">
        <div class="user-info-container">
            <img src=@Url.Content(@"~/" + Model.ImageUrl) alt="user-icon" />
            <h1>@Model.Username</h1>
        </div>
        <div class="biography-container">
            <h1>
                About Me
            </h1>
            @if (string.IsNullOrEmpty(Model.Biography))
            {
                <p>The user hasn't shared about themselves yet!</p>
            }
            else
            {
                <p>@Model.Biography</p>    
            }  
        </div>
    </div>
    <div class="article-likes-container">
        <span>
             Articles: @Model.Articles
        </span>
    </div>
    <div class="date-page-container">
        <span>
            Account Creation: @Model.DateOfCreation.ToString(DateFormatConstants.DATEFORMAT)
        </span>
    </div>
    @if (User?.Identity?.Name == Model.Username)
    {
        <div class="edit-account-button-container">
            <a asp-controller="Account" asp-action="Edit">EDIT ACCOUNT</a>
        </div>
    }
</section>
